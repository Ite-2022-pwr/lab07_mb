<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
      fx:controller="pwr.ite.bedrylo.deliverer.controller.DelivererController">
    <children>
        <Label fx:id="infoTextLabel"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="startButton" mnemonicParsing="false" text="Uruchom"
                        onMouseClicked="#onStartButtonClick"/>
                <Button fx:id="stopButton" mnemonicParsing="false" text="Zatrzymaj"
                        onMouseClicked="#onStopButtonClick"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="takeOrderButton" disable="true" mnemonicParsing="false" text="weź zamówienie"
                    onMouseClicked="#onTakeOrderButtonClick"/>
            <Button fx:id="deliverOrderButton" disable="true" mnemonicParsing="false" text="dostarcz zamówienie"
                    onMouseClicked="#onDeliverOrderButtonClick"/>
        </HBox>

    </children>
</VBox>
